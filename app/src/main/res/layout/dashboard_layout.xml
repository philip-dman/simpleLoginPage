<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/material_dynamic_neutral10">

    <!-- Vertical guideline to split layout into two responsive columns -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical" />

    <!-- Top toolbar -->

    <!-- Title below toolbar -->

    <!-- Center image below title -->

    <!-- First row: left button (About Us) -->

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="211dp"
        android:layout_height="68dp"
        android:layout_marginTop="84dp"
        android:text="Welcome to Dashboard"
        android:textAlignment="viewStart"
        android:textColor="#00897B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="187dp"
        android:layout_height="191dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shicon" />

    <!-- First row: right button (Services) -->

    <!-- Second row: left button (Staff) -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/servicesBtn"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#00897B"
        android:text="Services"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_dialog_dialer"
        app:iconGravity="textTop"
        app:iconSize="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/guideline_v_center"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/aboutUsBtn"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#00897B"
        android:text="About Us"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconGravity="textTop"
        app:iconSize="46dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_v_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/staffBtn"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#00897B"
        android:text="Staff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/stat_sys_headset"
        app:iconGravity="textTop"
        app:iconSize="46dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_v_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutUsBtn" />

    <!-- Second row: right button (Contacts) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/contactsBtn"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#00897B"
        android:text="Contacts"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/stat_sys_phone_call"
        app:iconGravity="textTop"
        app:iconSize="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_v_center"
        app:layout_constraintTop_toBottomOf="@id/servicesBtn" />

    <!-- Logout button anchored to bottom center -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Logout"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/material_dynamic_neutral95"
        android:textColor="@color/black"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
